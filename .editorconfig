root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
max_line_length = 80

[Dockerfile]
indent_style = space
indent_size = 4
max_line_length = 80

[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{html,css,js,ts}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88
